{
  "manifest_version": 2,

  "name": "Unpresidented",
  "description": "Reduce the political stress in your life",
  "version": "1.0",

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "star.png",
    "default_title": "Silence the noise"
  },
  "permissions": [
    "storage",
    "https://ajax.googleapis.com/"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["content.css"],
      "js": ["content.js"]
    }
  ]
}